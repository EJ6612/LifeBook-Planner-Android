<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="14dp">

    <TextView
        android:id="@+id/eventCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAMPLE EVENT NAME"
        android:textSize="28sp"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="6dp"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/eventCardTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="20sp"
            android:layout_marginHorizontal="6dp"/>

        <TextView
            android:id="@+id/eventCardDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONTH DATE YYYY"
            android:textSize="20sp"
            android:layout_marginHorizontal="6dp"/>

    </LinearLayout>

        <TextView
            android:id="@+id/eventCardLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAMPLE LOCATION PLACE"
            android:textSize="16sp"
            android:layout_margin="6dp"
            android:layout_gravity="center_vertical"/>



</LinearLayout>